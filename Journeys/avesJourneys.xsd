<?xml version="1.0" encoding="UTF-8"?>
<xs:schema 
xmlns:xs="http://www.w3.org/2001/XMLSchema" 
targetNamespace="http://www.w3schools.com" 
xmlns="http://www.w3schools.com" 
xmlns:p="http://www.w3schools.com" 
elementFormDefault="qualified">
	<xs:element name="root">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="journey" maxOccurs="unbounded">
					<xs:complexType> 
						<xs:sequence>
							<xs:element name="pplace" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="document" maxOccurs="unbounded" minOccurs="0">
											<xs:complexType>
												<xs:attribute name="type" use="required"></xs:attribute>
												<xs:attribute name="uri" use="required"></xs:attribute>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
									<xs:attribute name="pname" use="required"></xs:attribute>
									<xs:attribute name="latitude"></xs:attribute>
									<xs:attribute name="longitude"></xs:attribute>
								</xs:complexType>
							  	<xs:unique name="uniquePlaceName">
    								<xs:selector xpath="p:pplace" /> 
    								<xs:field xpath="@pname" /> 
  								</xs:unique>
							</xs:element>
						</xs:sequence>
					<xs:attribute name="sessiondate"></xs:attribute>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
